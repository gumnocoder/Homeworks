<Window x:Class="Homework_13_bank_system.View.CreateUserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_13_bank_system.View"
        xmlns:viewModels="clr-namespace:Homework_13_bank_system.ViewModels"
        mc:Ignorable="d"
        Title="CreateUserForm" 
        Height="500" 
        Width="320"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Window.DataContext>
        <viewModels:CreateUserFormVM/>
    </Window.DataContext>
    <Border
        Background="#D9F096"
        x:Name="createUFMainBorder">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button
                    Background="WhiteSmoke"
                    Command="{Binding CreateUser}"
                    x:Name="createBtn"
                    Content="Создать"
                    Margin="10"></Button>
                <Button
                    Command="{
                        x:Static viewModels:CreateUserFormVM.CloseCommand}"
                    CommandParameter="{Binding RelativeSource={
                        RelativeSource FindAncestor, 
                        AncestorType={x:Type Window}}}"
                    Background="WhiteSmoke"
                    Grid.Column="1"
                    x:Name="cancelBtn"
                    Content="Отмена"
                    Margin="10"></Button>
            </Grid>
            <Canvas Grid.Row="0" Background="WhiteSmoke"/>
            <TextBlock 
                Grid.Row="0"
                Foreground="Olive"
                FontWeight="Black"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                FontSize="15"
                >
                Заполните данные
            </TextBlock>
            <StackPanel Grid.Row="1">
                <TextBlock 
                    Foreground="Olive"
                    FontWeight="Bold"
                    Text="Логин нового пользователя"
                    Height="20"
                    Margin="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    FontSize="15"
                    />
                <TextBox 
                    Text="{Binding Login, Mode=TwoWay}"
                    x:Name="loginField"
                    Height="40" 
                    Margin="25,0,25,0"/>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <TextBlock 
                    Foreground="Olive"
                    FontWeight="Bold"
                    Text="Имя нового пользователя"
                    Height="20"
                    Margin="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    FontSize="15"
                    />
                <TextBox 
                    Text="{Binding Name, Mode=TwoWay}"
                    x:Name="nameField"
                    Height="40" 
                    Margin="25,0,25,0"/>
            </StackPanel>
            <StackPanel Grid.Row="3">
                <TextBlock 
                    Foreground="Olive"
                    FontWeight="Bold"
                    Text="пароль"
                    Height="20"
                    Margin="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    FontSize="15"
                    />
                <TextBox 
                    Text="{Binding Pass, Mode=TwoWay}"
                    x:Name="passField"
                    Height="40" 
                    Margin="25,0,25,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
