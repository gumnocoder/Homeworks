<UserControl x:Class="Homework_13_bank_system.View.AdminPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Homework_13_bank_system.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <StackPanel>
        <Button 
            Command="{Binding CreateUser}"
            IsEnabled="{Binding CreateUserBtnActivity}"
                x:Name="createUserBtn"
                Content="Создать пользователя"
                Width="200"
                Height="30"/>
    </StackPanel>
</UserControl>
